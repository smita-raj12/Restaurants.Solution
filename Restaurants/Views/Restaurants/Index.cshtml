@{
  Layout = "_Layout";
}

@using Restaurants.Models;
@model List<Restaurants.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 
else
{
  @using (Html.BeginForm())
  {
    <p>Find By name: @Html.TextBox("searchString")
      <input type="submit" value="Search" /></p>
  }

  @foreach (Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Name</li>
  }
}
<p>@Html.ActionLink("Add new restaurant", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>