@{
  Layout = "_Layout";
}

@using Restaurants.Models;
@model List<Restaurants.Models.Review>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 
else
{
  @foreach (Review review in Model)
  {
    <li>@Html.ActionLink($"{review.Name}", "Details", new { id = review.ReviewId }) | @review.Restaurant.Name</li>
  }
}
<p>@Html.ActionLink("Add new review", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>